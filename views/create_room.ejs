
<!-- 관리자가 책 데이터를 넣는 화면 -->

<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, height=device-height, initial-scale=1">
		
		<title>오늘 뭐 읽지?</title>
		
		<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    	
    	<style>
			body        { padding-top:80px; }
			
			.jumbotron{
				width: 100%;
				margin-left: auto;
				margin-right: auto;
			}
    	</style>
    
	</head>
	<body>
		
		<div class="container">			
						
			<div class="col-sm-6 col-sm-offset-3 jumbotron">
			
			    <h2>책 데이터 입력</h2>
			
			    <!-- 인증 처리 후 메시지가 있으면 메시지 표시 -->
			    <% if (message.length > 0) { %>
			        <div class="alert alert-danger"><%= message %></div>
				<% } %>
				

				<!-- 책 데이터 넣는 폼 -->
			    <form action="/create_room" method="post" enctype="multipart/form-data" >
			        <div class="form-group">
			            <label>책 이름</label>
			            <input type="text" class="form-control" name="room_name">
					</div>
					<div class="form-group">
							<label>저자</label>
							<input type="text" class="form-control" name="writer">
						</div>
			        <div class="form-group">
			            <label>카테고리</label>
			            <input type="text" class="form-control" name="category">
			        </div>
			        <div class="form-group">
			            <label>책 소개</label>
						<textarea class="form-control" name="room_intro"></textarea>
					</div>
					<div class="form-group">
			            <label>책 이미지</label>
						<input type="file" name="book_img"/>
			        </div>
			
			        <button type="submit" class="btn btn-warning btn-lg">입력</button>
			    </form>
			
			</div>
			
		</div>	
			
	</body>
</html>